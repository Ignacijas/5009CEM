
<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Home Page</title>
		<meta name="description" content="form to add new books">
		<meta name="author" content="Mark Tyers">
		<link href="{{host}}/style.css" type="text/css" rel="stylesheet" />
		<script type="module" src="main.js"></script>
	</head>
	<body>
		<header>
			<h1>Home</h1>
			{{#if authorised}}
				<a href="/logout">Log out</a>
			{{else}}
				<a href="/login">Log in</a>
			{{/if}}
		</header>
		{{#if msg}}
 			<aside>
				<p class="msg">{{msg}}</p>
			</aside>
		{{/if}}
	<main>
		<p>This is the home page. Users can see it without logging in.</p>
		{{#if authorised}}
			<p><a href="/secure">secure page</a></p>
		{{/if}}
     <table>
       <tr><th>Photo</th><th>Name</th><th>Short summary</th><th>Last Edited</th><th>Actions</th></tr>  
       {{#each records}}
        <tr>
         <td><img src="../avatars/{{photo}}"/></td>
         <td>{{this.title}}</td>
         <td>{{this.summary}}</td>
         <td>{{this.lastcontact}}</td>
          <td><a href="/secure/details/{{this.account}}">Details</a></td>
        </tr>
      {{/each}}
     </table>
	</main>
	</body>
</html>
