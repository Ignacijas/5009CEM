
<!doctype html>
<script src="../public/main.js"></script> 
<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>User page - CVs</title>
		<meta name="description" content="form to add new books">
		<meta name="author" content="Mark Tyers">
		<link href="{{host}}/style.css" type="text/css" rel="stylesheet" />
		<script type="module" src="{{host}}/main.js"></script>
	</head>
	<body>
		<header>
		<h1>Details - {{account}}</h1>
		<a href="/logout">Log out</a>
		</header>
		{{#if msg}}
 			<aside>
				<p class="msg">{{msg}}</p>
			</aside>
		{{/if}}
		<main>
      <p>{{cv.title}} - {{account}}</p>
      
    
      
      <figure>
        <img class="detail" src="{{host}}/avatars/{{cv.photo}}"/>
        <figcaption>{{cv.title}}</figcaption>
        <figcaption>{{cv.summary}}</figcaption>
        <figcaption>{{cv.qualifications}}</figcaption>
        <figcaption>{{cv.skills}}</figcaption>
        <figcaption>Last edited:{{cv.lastcontact}}</figcaption>
      </figure>
    </main>
      <aside class="fixed top left">
        <button class="back">Back</button>
      </aside>
	</body>
</html>
